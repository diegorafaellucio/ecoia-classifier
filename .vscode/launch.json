    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run Server",
            "type": "debugpy",
            "request": "launch",
            "program": "manage.py",
            "args": ["runserver"],
            "django": true,
            "console": "integratedTerminal",
            "python": "/usr/bin/python3.11"
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy", 
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}